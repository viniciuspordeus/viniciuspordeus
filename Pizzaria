    <script>
        // Banco de dados em mem√≥ria
        let clientes = [];
        let showingForm = false;

        // Carregar clientes do localStorage
        function loadClientes() {
            const stored = localStorage.getItem('pizzaria_clientes');
            if (stored) {
                clientes = JSON.parse(stored);
            }
            renderClientes();
        }

        // Salvar clientes no localStorage
        function saveClientes() {
            localStorage.setItem('pizzaria_clientes', JSON.stringify(clientes));
        }

        // Navega√ß√£o entre se√ß√µes
        function showSection(sectionId) {
            const sections = document.querySelectorAll('.section');
            sections.forEach(s => s.classList.remove('active'));
            document.getElementById(sectionId).classList.add('active');

            const buttons = document.querySelectorAll('.nav button');
            buttons.forEach(b => b.classList.remove('active'));
            event.target.classList.add('active');

            // Fechar menu mobile
            document.getElementById('mainNav').classList.remove('show');
        }

        // Toggle menu mobile
        function toggleMobileMenu() {
            document.getElementById('mainNav').classList.toggle('show');
        }

        // Toggle formul√°rio de cadastro
        function toggleCadastro() {
            showingForm = !showingForm;
            const form = document.getElementById('formCadastro');
            const btnText = document.getElementById('btnCadastroText');
            
            if (showingForm) {
                form.style.display = 'block';
                btnText.textContent = '‚ùå Cancelar';
            } else {
                form.style.display = 'none';
                btnText.textContent = '‚ûï Novo Cliente';
                limparFormulario();
            }
        }

        // Limpar formul√°rio
        function limparFormulario() {
            document.getElementById('inputNome').value = '';
            document.getElementById('inputEmail').value = '';
            document.getElementById('inputTelefone').value = '';
            document.getElementById('inputEndereco').value = '';
        }

        // Cadastrar cliente
        function cadastrarCliente() {
            const nome = document.getElementById('inputNome').value.trim();
            const email = document.getElementById('inputEmail').value.trim();
            const telefone = document.getElementById('inputTelefone').value.trim();
            const endereco = document.getElementById('inputEndereco').value.trim();

            if (!nome || !email || !telefone || !endereco) {
                alert('Por favor, preencha todos os campos!');
                return;
            }

            const novoCliente = {
                id: Date.now(),
                nome,
                email,
                telefone,
                endereco,
                dataCadastro: new Date().toLocaleDateString('pt-BR')
            };

            clientes.push(novoCliente);
            saveClientes();
            renderClientes();
            toggleCadastro();
            alert('Cliente cadastrado com sucesso!');
        }

        // Deletar cliente
        function deletarCliente(id) {
            if (confirm('Deseja realmente excluir este cliente?')) {
                clientes = clientes.filter(c => c.id !== id);
                saveClientes();
                renderClientes();
            }
        }

        // Renderizar tabela de clientes
        function renderClientes() {
            const container = document.getElementById('clientesTable');
            
            if (clientes.length === 0) {
                container.innerHTML = '<div class="empty-state">Nenhum cliente cadastrado ainda. Clique em "Novo Cliente" para come√ßar!</div>';
                return;
            }

            let html = `
                <table>
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>E-mail</th>
                            <th>Telefone</th>
                            <th>Endere√ßo</th>
                            <th>Data Cadastro</th>
                            <th style="text-align: center;">A√ß√µes</th>
                        </tr>
                    </thead>
                    <tbody>
            `;

            clientes.forEach(cliente => {
                html += `
                    <tr>
                        <td>${cliente.nome}</td>
                        <td>${cliente.email}</td>
                        <td>${cliente.telefone}</td>
                        <td>${cliente.endereco}</td>
                        <td>${cliente.dataCadastro}</td>
                        <td style="text-align: center;">
                            <button class="btn-delete" onclick="deletarCliente(${cliente.id})">üóëÔ∏è Excluir</button>
                        </td>
                    </tr>
                `;
            });

            html += `
                    </tbody>
                </table>
            `;

            container.innerHTML = html;
        }

        // Inicializar
        loadClientes();
    </script>
</body>
</html>
